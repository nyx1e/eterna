<page id="quarta" bg_image="f5d8dea0_2ce8_481b_b5fc_224200a11554.jpg" bg_music="crescendo_orquestra.mp3">
  <agent 
    id="titulo" 
    x="500" 
    y="320" 
    text="Capítulo 03" 
    color="white" 
    font-size="50"
  />
<fab-if when="$texto3 < 6">
  <agent 
    id= "botão"
    text= "continuar"
    x="570"
    y="559"
    font-size="20"
    color="black" 
    on_click="set(texto3, $texto3+1)"
    />
  </fab-if>

<fab-if when="$texto3 = 1">
  <agent
    id="frase1"
    text="Nos dias seguintes, ele voltava ao mesmo lugar. Às vezes com pão, outras com flores mal colhidas. Ela dizia que não queria companhia, mas nunca o impedia de ficar."
    x="center"
    y="470"
    font-size="17.5"
    color="white" 
    animation="typewriter"
    />
</fab-if>

<fab-if when="$texto3 = 2">
   <agent
    id="frase2"
    text="Ele a fazia rir — uma risada rouca e esquecida. Uma rachadura discreta surgiu na muralha ao redor de seu coração."
    x="center"
    y="483"
    font-size="19.5"
    color="white" 
     animation="typewriter"
    />
</fab-if>

<fab-if when="$texto3 = 3">
  <agent
    id="frase3"
    text="O tempo passou devagar. O menino crescia, e com ele crescia o laço entre os dois. Ela, que havia esquecido como era cuidar de alguém, se pegava esperando por ele."
    x="center"
    y="470"
    font-size="18"    
    color="white" 
    animation="typewriter"
  />    
</fab-if>

<fab-if when="$texto3 = 4">
  <agent
    id="frase4"
    text="Ela sentia medo. De novo, estava amando algo que o tempo poderia tirar."
    x="center"
    y="490"
    font-size="20"    
    color="white" 
    animation="typewriter"
  />    
</fab-if>
  
<fab-if when="$texto3 = 5">
  <agent
    id="frase5"
    text="Certa noite, um grupo de aldeões veio à floresta. Diziam que o menino estava amaldiçoado pela bruxa e queriam matá-los para purificar o vilarejo da maldição da bruxa."
    x="center"
    y="470"
    font-size="17"
    color="white" 
    animation="typewriter"
  />    
</fab-if>

<fab-if when="$texto3 = 6">
  <agent
    id="caminho1"
    text="- Pegar o menino e fugir"
    x="270"
    y="525"
    font-size="20"
    color="white"
    animation="breathing"
    on_click="goToPage('quinta1')"
  />    
</fab-if>
  
<fab-if when="$texto3 = 6">
  <agent
    id="caminho2"
    text="- Tentar convencê-los de que não o enfeitiçou"
    x="180"
    y="460"
    font-size="20"
    color="white"
    animation="breathing"
    on_click="goToPage('quinta2')"
  />    
</fab-if>
</page>