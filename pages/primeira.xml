<page id="primeira" bg_image="b1d47331_609f_44cc_8fe3_b7bc497d63bd.jpg">
  <agent 
    id="titulo" 
    x="500" 
    y="320" 
    text="Capítulo 01" 
    color="white" 
    font-size="50"
    />
  
<agent 
  id= "botão"
  text= "continuar"
  x="672"
  y="450"
  font-size="20"
  color="white" 
  on_click="set(texto, $texto+1)"
  />

<fab-if when="$texto = 1">
  <agent
    id="frase1"
    text="Eis uma bruxa de bom de coração e curiosa."
    x="center"
    y="475"
    font-size="25"
    color="white"
    />
</fab-if>

<fab-if when="$texto = 2">
  <agent
    id="frase2"
    text="Entretanto o tempo tornou-se seu maior inimigo, pois tirou dela todos a quem amava e a amaldiçoou com a eternidade."
    x="center"
    y="465"
    font-size="20"
    color="white" 
    />
</fab-if>

<fab-if when="$texto = 3">
  <agent
    id="frase3"
    text="Com o tempo a bruxa, uma vez amável, entrou em contato com um mundo cruel e sem misericórdia, o qual endureceu seu coração e a transformou em um monstro."
    x="center"
    y="455"
    font-size="18"
    color="white" 
    />
</fab-if>

<fab-if when="$texto = 4">
  <agent
    id="next_page_text"
    text="..."
    animation="glitch"
    y="475"
    x="center"
    on_click="goToPage('segunda')"
  />
</fab-if>  
</page>